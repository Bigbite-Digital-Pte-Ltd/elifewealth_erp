<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Define the form view for custom.employee -->
        <record model="ir.ui.view" id="view_employee_form">
            <field name="name">employee.form</field>
            <field name="model">custom.employee</field>
            <field name="arch" type="xml">
                <form string="Employee Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}" />
                                <field name="name"/>
                                <field name="work_email"/>
                                <field name="work_phone"/>
                                <field name="work_mobile"/>
                                <field name="department"/>
                                <field name="gender"/>
                                <field name="notes"/>
                                <field name="marital_status"/>
                                <field name="date_of_birth"/>
                                <field name="nationality"/>
                                <field name="identification_no"/>
                                <field name="passport_no"/>
                                <field name="visa_no"/>
                                <field name="work_permit_no"/>
                                <field name="visa_expire_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the tree view for custom.employee -->
        <record model="ir.ui.view" id="view_employee_tree">
            <field name="name">employee.tree</field>
            <field name="model">custom.employee</field>
            <field name="arch" type="xml">
                <tree string="Employees">
                    <field name="image" widget="image" options="{'size': [90, 90]}" />
                                <field name="name"/>
                                <field name="work_email"/>
                                <field name="work_phone"/>
                                <field name="work_mobile"/>
                                <field name="department"/>
                                <field name="gender"/>
                                <field name="notes"/>
                                <field name="marital_status"/>
                                <field name="date_of_birth"/>
                                <field name="nationality"/>
                                <field name="identification_no"/>
                                <field name="passport_no"/>
                                <field name="visa_no"/>
                                <field name="work_permit_no"/>
                                <field name="visa_expire_date"/>
                </tree>
            </field>
        </record>

            <!-- Define the kanban view for custom.employee -->
          <record model="ir.ui.view" id="view_employee_kanban">
        <field name="name">employee.kanban</field>
        <field name="model">custom.employee</field>
        <field name="arch" type="xml">
            <kanban string="Employees">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('custom.employee', 'image', record.id)" class="oe_kanban_avatar" style="max-height:90px; max-width:90px;" />
                            </div>
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="department"/></div>
                                <div><field name="work_email"/></div>
                                <div><field name="work_phone"/></div>
                                <div><field name="work_mobile"/></div>
                                <div><field name="gender"/></div>
                                <div><field name="notes"/></div>
                                <div><field name="marital_status"/></div>
                                <div><field name="date_of_birth"/></div>
                                <div><field name="nationality"/></div>
                                <div><field name="identification_no"/></div>
                                <div><field name="passport_no"/></div>
                                <div><field name="visa_no"/></div>
                                <div><field name="work_permit_no"/></div>
                                <div><field name="visa_expire_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


        <!-- Define the action to open employee views -->
        <record model="ir.actions.act_window" id="action_employee">
            <field name="name">Employees</field>
            <field name="res_model">custom.employee</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- Define the menu items for employees -->
        <menuitem id="menu_employee_root" name="ELW Employees"/>
        <menuitem id="menu_employee_list" parent="menu_employee_root" name="ELW Employee List" action="action_employee"/>

    </data>
</odoo>
