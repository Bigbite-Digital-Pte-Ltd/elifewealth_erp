<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the Employee form view -->
        <record id="view_custom_employee_form_inherit" model="ir.ui.view">
            <field name="name">custom.employee.form.inherit</field>
            <field name="model">custom.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="custom_field"/>
                </xpath>
            </field>
        </record>

        <!-- Optional: Extend the tree view -->
        <record id="view_custom_employee_tree_inherit" model="ir.ui.view">
            <field name="name">custom.employee.tree.inherit</field>
            <field name="model">custom.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_email']" position="after">
                    <field name="custom_field"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
