<odoo>
    <data>
        <!--/////////////////////////////PLANNING BY WORKCENTER//////////////////////////////////////////////////-->

        <!-- Calendar View -->
        <record id="view_mrp_workcenter_calendar" model="ir.ui.view">
            <field name="name">mrp.workcenter.calendar</field>
            <field name="model">mrp.workcenter</field>
            <field name="arch" type="xml">
                <calendar string="Workcenter Calendar" date_start="effective_date">
                    <field name="name"/>
                    <field name="technician_user_id"/>
                </calendar>
            </field>
        </record>

        <!-- List View -->
        <record id="view_mrp_workcenter_tree" model="ir.ui.view">
            <field name="name">mrp.workcenter.tree</field>
            <field name="model">mrp.workcenter</field>
            <field name="arch" type="xml">
                <tree string="Workcenter List">
                    <field name="name"/>
                    <field name="technician_user_id"/>
                    <field name="maintenance_count"/>
                </tree>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_mrp_workcenter_pivot" model="ir.ui.view">
            <field name="name">mrp.workcenter.pivot</field>
            <field name="model">mrp.workcenter</field>
            <field name="arch" type="xml">
                <pivot string="Workcenter Pivot">
                    <!-- Row and column fields -->
                    <field name="name" type="row"/>
                    <field name="company_id" type="row"/>

                    <!-- Measure fields -->
                    <field name="expected_duration" type="measure" string="Expected Duration"/>
                    <field name="duration_per_unit" type="measure" string="Duration Per Unit"/>
                    <field name="duration_minutes" type="measure" string="Duration (minutes)"/>
                </pivot>
            </field>
        </record>



        <!-- Graph View -->
        <record id="view_mrp_workcenter_graph" model="ir.ui.view">
            <field name="name">mrp.workcenter.graph</field>
            <field name="model">mrp.workcenter</field>
            <field name="arch" type="xml">
                <graph string="Workcenter Graph" type="bar">
                    <field name="name" type="row"/>
                    <field name="carried_quantity" type="measure" string="Carried Quantity"/>
                    <field name="cost_per_hour" type="measure" string="Cost per Hour"/>
                    <field name="duration_minutes" type="measure" string="Duration (minutes)"/>
                    <field name="duration_deviation_percentage" type="measure" string="Duration Deviation (%)"/>
                    <field name="duration_per_unit" type="measure" string="Duration Per Unit"/>
                    <field name="expected_duration" type="measure" string="Expected Duration"/>
                    <field name="quantity" type="measure" string="Quantity"/>
                    <field name="count" type="measure" string="Count"/>
                </graph>
            </field>
        </record>
        <!--/////////////////////////////PLANNING BY PRODUCTION//////////////////////////////////////////////////-->

        <!-- Calendar View -->
            <record id="view_mrp_production_calendar" model="ir.ui.view">
                <field name="name">mrp.production.calendar</field>
                <field name="model">mrp.production</field>
                <field name="arch" type="xml">
                    <calendar string="Production Calendar" date_start="production_date">
                        <field name="name"/>
                        <field name="product_name"/>
                        <field name="quantity"/>
                    </calendar>
                </field>
            </record>

            <!-- List View -->
            <record id="view_mrp_production_tree" model="ir.ui.view">
                <field name="name">mrp.production.tree</field>
                <field name="model">mrp.production</field>
                <field name="arch" type="xml">
                    <tree string="Production List">
                        <field name="name"/>
                        <field name="product_name"/>
                        <field name="quantity"/>
                        <field name="total_cost"/>
                        <field name="cost_per_unit"/>
                    </tree>
                </field>
            </record>

            <!-- Pivot View -->
        <record id="view_mrp_production_pivot" model="ir.ui.view">
                <field name="name">mrp.production.pivot</field>
                <field name="model">mrp.production</field>
                <field name="arch" type="xml">
                    <pivot string="Production Pivot">
                            <field name="product_name" type="row"/>
                            <field name="product_id" type="row"/>

                            <!-- Measure fields -->
                            <field name="expected_duration" type="measure" string="Expected Duration"/>
                            <field name="duration_per_unit" type="measure" string="Duration Per Unit"/>
                            <field name="duration_minutes" type="measure" string="Duration (minutes)"/>
                    </pivot>
                </field>
            </record>

            <!-- Graph View -->
            <record id="view_mrp_production_graph" model="ir.ui.view">
                <field name="name">mrp.production.graph</field>
                <field name="model">mrp.production</field>
                <field name="arch" type="xml">
                    <graph string="Production Graph" type="bar">
                            <field name="name" type="row"/>
                            <field name="carried_quantity" type="measure" string="Carried Quantity"/>
                            <field name="cost_per_hour" type="measure" string="Cost per Hour"/>
                            <field name="duration_minutes" type="measure" string="Duration (minutes)"/>
                            <field name="duration_deviation_percentage" type="measure" string="Duration Deviation (%)"/>
                            <field name="duration_per_unit" type="measure" string="Duration Per Unit"/>
                            <field name="expected_duration" type="measure" string="Expected Duration"/>
                            <field name="quantity" type="measure" string="Quantity"/>
                    </graph>
                </field>
            </record>
        <!--/////////////////////////////-PRODUCT ANALYSIS//////////////////////////////////////////////////-->
        <!-- Graph View -->
        <record id="view_production_analysis_graph" model="ir.ui.view">
            <field name="name">production.analysis.graph</field>
            <field name="model">mrp.production</field>
            <field name="arch" type="xml">
                <graph string="Production Analysis" type="line">
                </graph>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_production_analysis_pivot" model="ir.ui.view">
            <field name="name">production.analysis.pivot</field>
            <field name="model">mrp.production</field>
            <field name="arch" type="xml">
                <pivot string="Production Analysis">
                </pivot>
            </field>
        </record>

    </data>
</odoo>
