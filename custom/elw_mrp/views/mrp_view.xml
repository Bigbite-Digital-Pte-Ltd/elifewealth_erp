<odoo>
    <data>
        <menuitem id="menu_equipment_workcenter"
                  name="Work Center"
                  parent="maintenance.menu_equipment_form"
                  action="elw_mrp.mrp_equipment_workcenter_kanban_action"
                  groups="base.group_user"
                  sequence="1"/>

        <menuitem id="menu_mrp_dashboard"
                  name="Dashboard"
                  parent="mrp.menu_mrp_root"
                  action="mrp.mrp_workcenter_kanban_action"
                  sequence="8"/>

        <menuitem id="menu_mrp_reporting_production_analysis"
                  name="Production Analysis"
                  parent="mrp.menu_mrp_reporting"
                  action="mrp.mrp_workcenter_kanban_action"
                  sequence="3"/>

        <record id="mrp_mrp_production_tree_view_inherit" model="ir.ui.view">
            <field name="name">mrp.mrp.production.tree.view.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_finished']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
