<odoo>
    <data>
        <record model="ir.ui.view" id="qa_quality_check_wizard_form_view">
            <field name="name">qa.quality.check.wizard.form.view</field>
            <field name="model">quality.check.wizard</field>
            <field name="arch" type="xml">
                <form string="Quality Checks">
                    <group>
                        <group>
                            <field name="measure_on" invisible="1"/>
                            <field name="quality_state" invisible ="1"/>
                        </group>
                        <group>
                            <field name="date_cancel"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_cancel_appointment" string="Cancel Appointment" type="object"
                                class="btn-primary" data-hotkey="x"/>
                        <button string="Close" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="om_cancel_appointment_action_window">
            <field name="name">Cancel Appointment</field>
            <field name="res_model">cancel.appointment.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>